#include <stdio.h>

int main() {
    int a[5] = {50, 10, 40, 20, 30};
    int* ptr = a;

    for(int i=0;i<5-1;i++) {
        for(int j=i+1;j<5;j++) {
            if (*(ptr+i) > *(ptr+j)) {
                int temp = *(ptr+i);
                *(ptr+i) = *(ptr+j);
                *(ptr+j) = temp;
            }
        }
    }

    for(int i=0;i<5;i++)
        printf("%d ", *(ptr+i));
    printf("\n");

    return 0;
}

/*
Output:
10 20 30 40 50
*/
